@using GridTest_001.Controllers
@using Syncfusion.EJ2
@{
    ViewData["Title"] = "Home Page";
}

<script>
    function actionFailure(args)
    {
        var span = document.createElement('span');
        this.element.parentNode.insertBefore(span, this.element);
        span.style.color = '#FF0000';
        span.innerHTML = 'Server exception: ' + args['exception'];
    }
</script>




@{
    var grid = Html.EJS()
        .Grid("RazorGrid")
        //.DataSource((List<Person>) ViewBag.DataSource)
        .DataSource(dm =>
        {
            dm.BatchUrl("/Home/BatchUpdate")
              .CrudUrl("/Home/CrudUpdate")
              .Adaptor("UrlAdaptor")
              .Url("/Home/UrlDatasource");
        })
        //.DetailTemplate("#detailtemplate")
        .Columns(col =>
        {
            col.Field("Id")
               .HeaderText("ID")
               .IsPrimaryKey(true)
               .Width("100")
               .AllowEditing(false)
               .Visible(false)
               .Add();
            col.Field("FirstName")
               .HeaderText("First Name")
               .Width("150")
               .ValidationRules(new { required = "true" })
               .Add();
            col.Field("LastName")
               .HeaderText("Last Name")
               .Width("150")
               .ValidationRules(new { required = "true" })
               .Add();
        })
        .AllowPaging()
        .AllowFiltering()
        .AllowSorting()
        .AllowReordering()
        .AllowResizing()
        .AllowGrouping()
        .ShowColumnMenu()
        .PageSettings(page => page.PageCount(5))
        .EditSettings(edit =>
        {
            edit.AllowAdding(true)
                .AllowEditing(true)
                .AllowDeleting(true)
                .Mode
                (
                      Syncfusion.EJ2.Grids.EditMode
                                            .Batch
                                            //.Normal
                );
        })
        .Toolbar(new List<string> { "Add", "Edit", "Delete", "Update", "Cancel" })
        .ActionFailure("actionFailure");
}

@(grid.Render())

























