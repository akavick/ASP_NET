<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewData["Title"] - SamProject</title>
    
    <link rel="stylesheet"
          href="~/lib/bootstrap/css/bootstrap.min.css" />
    
    <environment include="Development">
        <link rel="stylesheet"
              href="~/lib/syncfusion/ej2/bootstrap.css" />
        <link rel="stylesheet"
              href="~/css/site.css"
              asp-append-version="true" />
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet"
              href="~/lib/syncfusion/css/bootstrap.min.css" />
        <link rel="stylesheet"
              href="~/css/site.min.css" />
    </environment>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    
    <environment include="Development">
        <script src="~/lib/syncfusion/ej2/dist/ej2.min.js"></script>
        <script src="~/js/site.js"
                asp-append-version="true"></script>
    </environment>

    <environment exclude="Development">
        <script src="~/lib/syncfusion/js/ej2.min.js"></script>
        <script src="~/js/site.min.js"></script>
    </environment>

</head>

<body style="padding-top:0;">

    <div id="mainContentWrapper"
         style="display: none; width:100%; height:100%;">

        <div id="warningMessage"
             class="mb-3"
             style="display: none;">Your browser have some problems with rendering SVG and some components on this page may not work correctly</div>

        @*<partial name="_CookieConsentPartial" />*@

        <div style="margin: 10px 5%; height: 100%;">
            @RenderBody()
        </div>
    </div>



    <ejs-scripts></ejs-scripts>


    <script>

        document.getElementById("mainContentWrapper").style.display = "block";

        let chart = document.getElementById("Chart");

        if (chart)
        {
            chart.ej2_instances[0].refresh();
        }

    </script>


    @RenderSection("Scripts", required: false)

</body>
</html>
