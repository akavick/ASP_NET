@functions{

    public UserInfo GetUserInfo()
    {
        var user = User?.Identity as System.Security.Principal.WindowsIdentity ?? User?.Identity;

        var userInfo = new UserInfo
        {
            Name = user?.Name ?? "unknown",
            AuthenticationType = user?.AuthenticationType ?? "unknown",
            IsAuthenticated = user?.IsAuthenticated ?? false
        };

        return userInfo;
    }

    public Microsoft.AspNetCore.Html.IHtmlContent Serialize(object obj)
    {
        return Json.Serialize(obj, new Newtonsoft.Json.JsonSerializerSettings { ReferenceLoopHandling = Newtonsoft.Json.ReferenceLoopHandling.Ignore });
    }

}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - SamTestCompleted</title>

    <environment include="Development">
        <script src="~/js/errorHandler.js"
                asp-append-version="true"></script>
        <script src="~/js/helpers.js"
                asp-append-version="true"></script>
        <link rel="stylesheet"
              href="~/css/site.css"
              asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <script src="~/js/errorHandler.min.js"
                asp-append-version="true"></script>
        <script src="~/js/helpers.min.js"
                asp-append-version="true"></script>
        <link rel="stylesheet"
              href="~/css/site.min.css"
              asp-append-version="true" />
    </environment>

</head>
<body>

    <script>
        window.SamTestCompleted.ErrorModule.actions.initialize(@(Serialize(GetUserInfo())), "@(Url.Action("UiError", "Home"))");
        window.SamTestCompleted.Helpers.BrowserHelper.actions.constraintBrowsers();
    </script>

    <partial name="_CookieConsentPartial" />

    <div>
        @RenderBody()
    </div>

    <environment include="Development">
        <script src="~/js/site.js"
                asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.min.js"
                asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)

</body>
</html>
