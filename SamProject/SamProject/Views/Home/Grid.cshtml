


<ejs-grid id="Grid"
          dataSource=@ViewBag.GridDataSource 
          allowPaging="true"
          allowReordering="true"
          allowResizing="true"
          allowSorting="true"
          showColumnMenu="true"
          allowGrouping="true"
          
          >

    <e-grid-columns>
        <e-grid-column field="Id"
                       headerText="Номер"
                       textAlign="Left"
                       width="25"></e-grid-column>
        <e-grid-column field="Project.Name"
                       headerText="Проект"
                       width="150"></e-grid-column>
        <e-grid-column field="Project.Client.Name"
                       headerText="Заказчик"
                       width="150"></e-grid-column>
        @*<e-grid-column field="OrderDate" headerText="Order Date" width="130" textAlign="Right" format="yMd"></e-grid-column>*@
    </e-grid-columns>
</ejs-grid>