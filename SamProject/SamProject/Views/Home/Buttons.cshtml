@model Application



<div>
    <ejs-button id="BackButton"
                content="Назад"
                isPrimary="true"
                type="button"></ejs-button>

    <ejs-button id="SaveButton"
                content="Отправить"
                isPrimary="true"
                disabled="@(Model != null)"
                type="button"></ejs-button>

    <ejs-button id="ApproveButton"
                content="Одобрить"
                isPrimary="true"
                disabled="@(Model != null)"
                type="button"></ejs-button>

    <ejs-button id="DraftButton"
                content="Черновик"
                isPrimary="true"
                disabled="@(Model != null)"
                type="button"></ejs-button>
</div>





<script>

    let demoMode = () => { alert("Демо-режим"); };

    document.getElementById("BackButton").onclick = demoMode;
    document.getElementById("SaveButton").onclick = demoMode;
    document.getElementById("ApproveButton").onclick = demoMode;
    document.getElementById("DraftButton").onclick = demoMode;

</script>