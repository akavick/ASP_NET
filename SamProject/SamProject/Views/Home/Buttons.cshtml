@model RsApplication



@{
    var appIsNew = Model?.ApplicationStatus?.Type == RsApplicationStatusType.New;
}



<div>
    <ejs-button id="BackButton"
                content="Назад"
                isPrimary="true"
                type="button"
                onclick="location.replace('@(Url.Action("Index", "Home"))');"></ejs-button>

    <ejs-button id="SendButton"
                content="Отправить"
                isPrimary="true"
                disabled="@(!appIsNew)"
                type="button"></ejs-button>

    <ejs-button id="SaveButton"
                content="Сохранить"
                isPrimary="true"
                disabled="@(!appIsNew)"
                type="button"></ejs-button>

    <ejs-button id="ApproveButton"
                content="Одобрить"
                isPrimary="true"
                disabled="@(!appIsNew)"
                type="button"></ejs-button>

    <ejs-button id="DraftButton"
                content="Черновик"
                isPrimary="true"
                disabled="@(!appIsNew)"
                type="button"></ejs-button>
</div>





<script>

    let demoMode = function() { alert("Демо-режим"); };

    document.getElementById("SendButton").onclick = demoMode;
    document.getElementById("SaveButton").onclick = demoMode;
    document.getElementById("ApproveButton").onclick = demoMode;
    document.getElementById("DraftButton").onclick = demoMode;

</script>