@{
    var filterOperators = new[] { new { @operator = "contains" } };
    var customAttributes = new { @class = "customcss" };

    List<object> filterColumns = new List<object>();
    filterColumns.Add(new { field = "ApplicationStatus", matchCase = false, @operator = "contains" });

}



    
<style>
    .e-grid .e-headercell .customcss
    {
        background-color: #2382c3;
        color: white;
        font-family: 'Bell MT';
        font-size: 20px;
    }
</style>



<div>
    <ejs-accordion id="CrossingGridAccordion">
        <e-accordion-accordionitems>
            <e-accordion-accordionitem expanded="true"
                                       header="Пересекающиеся заявки"
                                       content="#CrossingGridDiv">
            </e-accordion-accordionitem>
        </e-accordion-accordionitems>
    </ejs-accordion>

    <div id="CrossingGridDiv"
         style="display: none;">

        <ejs-grid id="CrossingGrid"
                  dataSource="@ViewBag.CrossingGridDataSource"
                  allowPaging="true"
                  allowReordering="true"
                  allowResizing="true"
                  allowSorting="true"
                  showColumnMenu="true"
                  allowGrouping="true"
                  allowFiltering="true"
                  allowMultiSorting="true"
                  allowExcelExport="true"
                  allowPdfExport="true"
                  allowRowDragAndDrop="true"
                  enableAltRow="true"
                  allowSelection="true"
                  toolbar="@(new List<string> {"Search"})"
                  dataBound="crossingGridDataBound">

            <e-grid-pagesettings pageSize="10.0"
                                 pageSizes="@(new[] {"5", "10", "20", "All"})"></e-grid-pagesettings>

            <e-grid-filterSettings mode="Immediate"
                                   immediateModeDelay="200.0"
                                   type="FilterBar"></e-grid-filterSettings>

            <e-grid-columns>
                <e-grid-column field="Number" customAttributes="@customAttributes"
                               headerText="Номер"
                               width="30"></e-grid-column>
                <e-grid-column field="ApplicationStatus.Name"
                               headerText="Статус"
                               width="50"></e-grid-column>
                <e-grid-column field="Project.Name"
                               headerText="Проект"
                               width="50"></e-grid-column>
                <e-grid-column field="Specialty.Name"
                               headerText="Специальность"
                               width="50"></e-grid-column>
                <e-grid-column field="Qualification.Name"
                               headerText="Квалификация"
                               width="40"></e-grid-column>
                <e-grid-column field="Rate"
                               headerText="Ставка"
                               width="30"></e-grid-column>
                <e-grid-column field="Candidate.FullName"
                               headerText="Кандидат"
                               width="50"></e-grid-column>
                <e-grid-column field="BeginDate"
                               headerText="Начало"
                               width="40"
                               format="yMMMd"></e-grid-column>
                <e-grid-column field="EndDate"
                               headerText="Завершение"
                               width="40"
                               format="yMMMd"></e-grid-column>
                <e-grid-column field="ProjectManager.FullName"
                               headerText="Руководитель проекта"
                               width="50"></e-grid-column>
                <e-grid-column field="Smd.FullName"
                               headerText="SMD"
                               width="50"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>

    </div>
</div>





<script>

    function crossingGridDataBound(args)
    {
        this.autoFitColumns();
    }

</script>